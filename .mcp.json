{
  "mcpServers": {
    "gopls": {
      "type": "stdio",
      "command": "gopls",
      "args": [
        "mcp"
      ],
      "env": {}
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp",
      "headers": {
        "Authorization": "Bearer ${env:GITHUB_MCP_PAT}"
      }
    }
  }
}